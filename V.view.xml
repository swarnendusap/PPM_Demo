											<core:Item key="{ProjModelData>Name}" text="{ProjModelData>Name}"/>
										</Select>
										<Input value="{ProjModelData>Jan}"/>
										<Input value="{ProjModelData>Feb}"/>
										<Input value="{ProjModelData>Mar}"/>
										<Input value="{ProjModelData>Apr}"/>
										<Input value="{ProjModelData>May}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
						<footer>
							<OverflowToolbar id="otb3">
								<ToolbarSpacer/>
								<Button text="Save" type="Accept" press="onPressSave"/>
