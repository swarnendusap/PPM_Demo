					<Panel expandable="true" expanded="false" width="auto">
						<headerToolbar>
							<Toolbar height="3rem">
								<Title text="Project Staffing - Project Name"/>
							</Toolbar>
						</headerToolbar>
						<content>
							<ObjectListItem id="M1" title="Denali" type="Active" press="onShow"></ObjectListItem>
							<ObjectListItem id="M2" title="Newtera" type="Active" press="onShow"></ObjectListItem>
							<ObjectListItem id="M3" title="SAP Upgrade" type="Active" press="onShow"></ObjectListItem>
						</content>
					</Panel>
					<Panel expandable="true" expanded="false" width="auto">
						<headerToolbar>
							<Toolbar height="3rem">
								<Title text="Resource Assignment - Resource Name"/>
							</Toolbar>
						</headerToolbar>
